{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "delivery-route": {
        "ClusterId": "delivery-cluster",
        "Match": {
          "Path": "/delivery-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "packages-route": {
        "ClusterId": "packages-cluster",
        "Match": {
          "Path": "/packages-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "delivery-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://deliveryapi:8080"
          }
        }
      },
      "packages-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://packagesapi:8080"
          }
        }
      }
    }
  }
}
